{
    "name": "brick/form",
    "description": "Web form library",
    "type": "library",
    "keywords": [
        "Brick",
        "Form",
        "Input",
        "Select",
        "Textarea",
        "Button"
    ],
    "license": "MIT",
    "require": {
        "php": ">=7.1",
        "brick/html": "~0.1.1",
        "brick/validation": "~0.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "7.*",
        "satooshi/php-coveralls": "2.*"
    },
    "autoload": {
        "psr-4": {
            "Brick\\Form\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Brick\\Form\\Tests\\": "tests/"
        }
    }
}