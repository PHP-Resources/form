{
    "name": "brick/form",
    "description": "Web form library",
    "type": "library",
    "keywords": [
        "Brick",
        "Form",
        "Input",
        "Select",
        "Textarea",
        "Button"
    ],
    "license": "MIT",
    "require": {
        "php": ">=7.1",
        "brick/html": "~0.1.1",
        "brick/validation": "~0.2.0",
        "brick/brick": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "6.*",
        "satooshi/php-coveralls": "1.*"
    },
    "autoload": {
        "psr-4": {
            "Brick\\Form\\": "src/",
            "Brick\\Form\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}